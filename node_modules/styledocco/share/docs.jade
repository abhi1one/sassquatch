!!! 5
html
  head
    title
      if title && project.name
        #{title} | #{project.name}
      else if project.name
        #{project.name}
      else if title 
        #{title}
    meta(charset='utf-8')
    if (resources.docs && resources.docs.css)
      style !{resources.docs.css}
    if (resources.previews && resources.previews.js)
      script(type="text/preview") !{resources.previews.js}
    if (resources.previews && resources.previews.css)
      style(type="text/preview") !{resources.previews.css}
  body
    nav.bar.top.cf
      .container
        a.brand(href="index.html") #{project.name}
        ul.menu
          - var dropdownid = 0
          each links, folder in project.menu
            if folder != './' || links.length > 10
              - if (folder === './') folder = 'files'
              - dropdownid++
              li
                a.dropdown-toggle(href="#",data-toggle="dropdown-#{dropdownid}",href="#",unselectable="on") #{folder}
                ul.dropdown(id="dropdown-#{dropdownid}",hidden)
                  each link in links
                    li: a(href="#{link.href}") #{link.name}
            else
              each link in links
                li: a(href="#{link.href}") #{link.name}

        .nav
          button.toc.ir(title="Table of Contents",data-toggle="nav-toc"): i.toc
          input.search(type="search",placeholder="Search")

    section.container
      each section, i in sections
        article.section(id="#{section.slug}")
          .docs
            a.permalink.ir(href="##{section.slug}") #{section.title}
            !{section.docs}
          if section.code
            .code
              pre: code !{section.code}
    .bar.bottom
      .settings.container
        button.ir(title="Desktop (1280)",data-width=1280): i.desktop
        button.ir(title="Laptop (1024)",data-width=1024): i.laptop
        button.ir(title="Tablet (768)",data-width=768): i.tablet
        button.ir(title="Smart phone (320)",data-width=320): i.smartphone
        button.ir(title="Feature phone (240)",data-width=240): i.featurephone
        button.auto.is-active(title="Auto (100%)",data-width="auto") Auto
    if (resources.docs && resources.docs.js)
      script !{resources.docs.js}
